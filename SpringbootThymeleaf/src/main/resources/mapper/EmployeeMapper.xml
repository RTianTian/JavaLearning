<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="icu.xuyijie.springbootthymeleaf.mapper.EmployeeMapper">

    <select id="getById" resultType="icu.xuyijie.springbootthymeleaf.entity.Employee">
        SELECT *
        FROM employee
        WHERE id = #{id}
    </select>

    <select id="searchEmployeeList" resultType="icu.xuyijie.springbootthymeleaf.entity.Employee">
        SELECT *
        FROM employee
        WHERE is_delete = false
        <if test="name != null and name != ''">
            AND name LIKE CONCAT('%', #{name}, '%')
        </if>
        <if test="duty != null and duty != ''">
            AND name LIKE '%' + #{duty} + '%'
        </if>
        <if test="sex != null and sex != ''">
            AND sex = #{sex}
        </if>
        ORDER BY create_time DESC
    </select>

    <insert id="insert">
        INSERT INTO employee
        VALUES (#{id}, #{name}, #{duty}, #{sex}, CURRENT_TIME, #{editTime}, #{isDepart}, #{isDelete})
    </insert>

    <update id="update">
        UPDATE employee
        <set>
            edit_time = CURRENT_TIME,
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="duty != null and duty != ''">
                duty = #{duty},
            </if>
            <if test="sex != null and sex != ''">
                sex = #{sex},
            </if>
            <if test="isDepart != null">
                is_depart = #{isDepart},
            </if>
            <if test="isDelete != null">
                is_delete = #{isDelete},
            </if>
        </set>
        WHERE id = #{id}
    </update>

</mapper>
